            <form method="post" name="request-info" action="email-request">

                <p>If you are
                    requesting
                    information on a specific property, please visit our <a href="rentals">List
                        Of Current Rentals</a> and click "Contact Us about this property" next
                    to the property that
                    you wish to know more about.</p>
                <div class="form-group">
                    <label for="name">Full Name</label>

                    <input type="text" class="form-control" name="name" id="name" size="32" required>
                </div>

                <div class="form-group">
                    <label for="">Email Address:</label>

                    <input type="email" class="form-control" name="email" size="32" required>
                </div>
                <div class="form-group">
                    <label for="">Phone #:</label>
                    <input type="tel" class="form-control" name="phn_num" size="32">
                </div>

                <div class="form-group">
                    <label for="">Subject:</label>
                    <select class="form-control" name="subject" required>
                        <option value="">-- Select a Subject --</option>
                        <option value="General Information">General Information</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Type:</label>
                    <select class="form-control" name="prop_type" id="prop_type">
                        <option value="">-- Select a Property Type --</option>
                        <option value="Apartment">Apartment</option>
                        <option value="Condo">Condo</option>
                        <option value="Duplex">Duplex</option>
                        <option value="House">House</option>
                        <option value="Mobile Home">Mobile Home</option>
                        <option value="Studio">Studio</option>
                        <option value="Townhouse">Townhouse</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Price Range:</label>
                    <select class="form-control" name="price_range" id="price_range">
                        <option value="">-- Select a Price Range --</option>
                        <option value="$1200 to $1400">$1200 to $1400</option>
                        <option value="$1500 to $1800">$1500 to $1800</option>
                        <option value="$1800 to $2500">$1800 to $2500</option>
                        <option value="$2600+">$2600+</option>
                        <option value="$900 to $1200">$900 to $1200</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Estimated Move in Date:</label>
                    <input class="form-control" name="moveindate" class="form-control" type="text" id="moveindate">
                </div>
                <div class="form-group">
                    <label for="">Message:</label>
                    <textarea class="form-control" name="message" cols="50" rows="5" required></textarea>
                </div>
                <input type="submit" class="btn btn-success" name="MM_insert" value="Send Request/Message">


            </form>
