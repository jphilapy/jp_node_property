<div class="container">

    <div id="body">

        <div id="temporaryFormat">


            {{#if error}}

            <div class="alert alert-danger mt-3">
                <ul class="list-group">
                    {{#each error}}
                    <li class="list-group-item text-danger">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}

            <form id="myform" method="post" class="needs-validation mb-3 mt-3" action="/request" novalidate>

                <p>If you are
                    requesting
                    information on a specific property, please visit our <a href="rentals">List
                        Of Current Rentals</a> and click "Contact Us about this property" next
                    to the property that
                    you wish to know more about.</p>

                <div class="form-group mb-3">
                    <label for="name" class="form-label">Full
                        Name</label>

                    <input type="text" class="form-control" name="name" id="name" size="32"
                        value="{{#if request}}{{request.name}}{{/if}}" required>
                </div>

                <div class="form-group mb-3">
                    <label for="email">Email Address:</label>

                    <input type="email" class="form-control" name="email" id="email" size="32"
                        value="{{#if request}}{{request.email}}{{/if}}" required>
                </div>
                <div class="form-group mb-3">
                    <label for="phone">Phone #:</label>
                    <input type="tel" class="form-control" name="phone" id="phone" size="32"
                        value="{{#if request}}{{request.phone}}{{/if}}">
                </div>

                <div class="form-group mb-3">
                    <label for="subject">Subject:</label>
                    <input type="text" class="form-control" name="subject" id="subject" size="32"
                        value="{{#if request}}{{request.subject}}{{/if}}">
                </div>
                <div class="form-group mb-3">
                    <label for="prop_type">Type:</label>
                    <select class="form-control" name="prop_type" id="prop_type">
                        <option value="">-- Select a Property Type --</option>
                        <option value="Apartment">Apartment</option>
                        <option value="Condo">Condo</option>
                        <option value="Duplex">Duplex</option>
                        <option value="House">House</option>
                        <option value="Mobile Home">Mobile Home</option>
                        <option value="Studio">Studio</option>
                        <option value="Townhouse">Townhouse</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="price_range">Price Range:</label>

                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <select class="form-control" name="price_range" id="price_range">
                            <option value="">-- Select a Price Range --</option>
                            <option value="$1200 to $1400">$1200 to $1400</option>
                            <option value="$1500 to $1800">$1500 to $1800</option>
                            <option value="$1800 to $2500">$1800 to $2500</option>
                            <option value="$2600+">$2600+</option>
                            <option value="$900 to $1200">$900 to $1200</option>
                        </select>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="moveindate">Estimated Move in Date:</label>
                    <input class="form-control" name="moveindate" type="text" id="moveindate"
                        value="{{#if request}}{{request.moveindate}}{{/if}}">
                </div>
                <div class="form-group mb-3">
                    <label for="message">Message:</label>
                    <textarea class="form-control" name="message" id="message" cols="50"
                        rows="5">{{#if request}}{{request.message}}{{/if}}</textarea>
                </div>
                <button type="submit" class="btn btn-success">Send Request/Message</button>
            </form>
        </div>
    </div>
</div>